<div class="text-main card-bg p-3 ">

    <p class="mb-3 cp_rule_1">ユーザー登録</p>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="field mb-3">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, class: "equal-width custom-input" %>
      </div>

      <div class="field mb-3">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "equal-width custom-input" %>
      </div>

      <div class="field mb-3">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "equal-width custom-input" %>
      </div>

      <div class="field mb-3">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "equal-width custom-input" %>
      </div><br />

      <div class="actions mb-3 text-center">
        <%= f.submit "登録", class: "btn-lg bg-btn text-decoration-none" %>
      </div>
    <% end %>

</div>