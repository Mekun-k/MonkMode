<div class="text-main card-bg p-3 mb-5">
  <p class="mb-3 cp_rule_1">ログイン</p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field mb-3">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "equal-width custom-input", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, class: "equal-width custom-input", autocomplete: "current-password" %>
      </div>

      <div class="actions mt-3 text-center">
        <%= f.submit "ログイン", class: "btn-lg bg-btn text-decoration-none" %>
      </div>

    <% end %>
    <%= render "devise/shared/links" %>
</div>
