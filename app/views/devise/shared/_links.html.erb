<%- if controller_name != 'sessions' %>
  <%= link_to "ログイン", new_session_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%= button_to "Sign in with GoogleOauth2", omniauth_authorize_path(:user, :google_oauth2), data: { turbo: false } %><br />
  <%= button_to "Sign in with Twitter", omniauth_authorize_path(:user, :twitter), data: { turbo: false } %><br />
  <%= button_to "Sign in with Facebook", omniauth_authorize_path(:user, :facebook), data: { turbo: false } %><br />
<% end %>

<%- if controller_name != 'users/sessions' %>
  <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "アカウント作成", new_registration_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "パスワードを忘れた方はこちら", new_password_path(resource_name) %><br />
<% end %>
