<div class="card-bg text-main p-3">
  <% if users.exists? %>
    <% users.each do |user| %>
      <div class="form-inline">
        <span class="mt-3">
          <%= link_to profile_path(user), class: "equal-color cp_rule_2" do %>
            <% if user.avatar.attached? %>
              <%= image_tag(user.avatar, class: "profile-icon mx-2") %>
            <% else %>
              <%= image_tag("default_user.png", class: "profile-icon mx-2") %>
            <% end %>
            <strong class="mx-2">
              <%= user.name %>
            </strong>
            <span class="app-name mx-2 mt-1"><span class="small">MONK Lv. </span><%= user.level %></span>
          <% end %>
          <span class="ml-2"><%= render "follow_btn", user: user %></span>
        </span>
      </div>
      <div class="mt-2">
        <%= user.self_introduction %>
      </div>

      <hr>
    <% end %>
  <% else %>
    <p class="text-center mt-3 cp_rule_2">ユーザーはいません</p>
  <% end %>
</div>
