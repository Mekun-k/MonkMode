<% if user != current_user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー外す", user_relationships_path(user.id), class: "equal-color", method: :delete %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user.id), class: "equal-color", method: :post %>
  <% end %>
<% end %>
