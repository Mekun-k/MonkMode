<% if user != current_user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー中", user_relationships_path(user.id), class: "equal-color btn-lg bg-btn", method: :delete %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user.id), class: "equal-color btn-lg bg-btn", method: :post %>
  <% end %>
<% end %>
