<%= form_tag (rules_update_path) do %>

  <% @rules.each_with_index do |rule, i| %>

    <% if rule.rule_title == "" && rule.rule_type_id == true %>
      <%= "No#{i+1}: " %><%= text_field_tag "rule[content][#{rule.id}]", rule.rule_content, maxlength: 50, placeholder: "自由に設定可能"  %><br>
    <% elsif rule.rule_type_id == true %>
      <%= "No#{i+1}: " %><%= text_field_tag "rule[content][#{rule.id}]", rule.rule_content, maxlength: 3, placeholder: "半角数字のみ入力可", pattern: "^[1-9][0-9]*" %>
      <%= rule.rule_title %><br>
    <% else %>
      <%= "No#{i+1}: " %><%= rule.rule_title %><br>
    <% end %>

  <% end %>

  <%= submit_tag "更新" %>

<% end %>
