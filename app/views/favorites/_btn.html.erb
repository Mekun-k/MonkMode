<% if answer.favorited?(current_user) %>
  <%= link_to answer_favorites_path(answer), method: :delete, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
     いいね<%= answer.favorites.count %>
  <% end %>
<% else %>
  <%= link_to answer_favorites_path(answer), method: :post, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
     いいね<%= answer.favorites.count %>
  <% end %>
<% end %>