<div class="bg-light p-1">
  <%= form_for(@contact, url: confirm_path) do |f| %>
    <div class="form-group">
      <%= f.label :name, 'お名前', class: "font-weight-bold" %>
      <%= f.text_field :name, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :message, 'メッセージ', class: "font-weight-bold" %><span class="small ml-1">※返信が必要な場合にはメールアドレスを入力してください</span>
      <%= f.text_area :message, size: '5x5', class: 'form-control' %>
    </div>

    <div>
      <%= f.submit '入力内容確認' %>
    </div>
  <% end %>
</div>
