<div id="heatmap"></div>
<script>
  document.addEventListener('turbolinks:load', function() {
    const answer_date = <%= user.map(user).to_json.html_safe %>;
    const cal = new CalHeatMap();
    cal.init({
      itemSelector: "#heatmap",
      domain: "month",
      subDomain: 'x_day',
      cellSize: 25,
      subDomainTextFormat: '%d',
      domainLabelFormat: '%mæœˆ',
      range: 1,
      legend: [-10,-4,2,8,14],
      data: answer_date,
      legendVerticalPosition: 'bottom',
      legendHorizontalPosition: 'center',
      legendOrientation: 'horizontal',
      legendCellSize: 15,
    });
  });
</script>
