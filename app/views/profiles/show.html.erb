<div class="row">
  <div class="col-2">
    <%= render'shared/profile_sidebar' %>
  </div>
  <div class="col-8 mt-3 p-0 offset-1">

    <div class="container-fluid">
      <div class="row mt-3">
        <div class="col-6">
          <div class="mt-2 py-2">
            <%= render partial: '/shared/answer_form', locals: { answers: @user.answers } %>
          </div>
        </div>

        <div class="col-3 offset-3 text-center px-0">
          <div class="mt-3 bg-light py-3 ">
            <% if @user.avatar.attached? %>
              <p>
                <%= image_tag(@user.avatar, class: 'profile-icon') %>
              </p>
            <% else %>
              <p>
                <%= link_to image_tag("default_user.png", class: 'profile-icon'), "#{profile_path(@user)}", data: {turbolinks: false} %>
              </p>
            <% end %>
            <%= render partial: '/relationships/follow_list', locals: { user: @user } %>
          </div>
        </div>
      </div>

      <div class="row mt-3">
        <div class="col-3 text-center bg-light offset-9">
          <div class="d-flex justify-content-center text-center mt-3 py-1 px-1">
            <%= render "shared/heatmap", user: @user %>
          </div>
        </div>
      </div>
    </div>


  </div>
</div>
